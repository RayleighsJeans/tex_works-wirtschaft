\pard\plain\s20\qc\sb240\sa240\b\f0\fs36\sl240\slmult1 \fi0 Structural Change, Discrimination and Female Labor Force Participation\par
\pard\plain\s21\qc\sa120\f0\fs24\sl240\slmult1 \fi360 Marie Scheitor \par
\pard\plain\s21\qc\sa120\f0\fs24\sl240\slmult1 \fi0 University of Greifswald {\cs62\super 1}
{\*\footnote\pard \s65\ql\fi-113\li397\lin397\f0\fs24{\cs62\super1} marie.scheitor@uni-greifswald.de, Friedrich-Loeffler-Str. 70, D-17489 Greifswald, \line  0049-3834-4202496.}
\par
